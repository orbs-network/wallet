{
    "manifest_version": 2,
    "name": "ORBS Wallet Beta",
    "version": "1.0",
    "description": "Implements a single Orbs account",
    "icons": {
        "32": "icons/orbs.svg",
        "48": "icons/orbs.svg",
        "96": "icons/orbs.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentscript.js"
            ]
        }
    ],
    "background": {
        "scripts": ["bundle.js"]
    },
    "browser_action": {
        "browser_style": true,
        "default_title": "ORBS Accounts",
        "default_popup": "settings.html",
        "default_icon": {
            "32": "icons/orbs.svg",
            "48": "icons/orbs.svg",
            "96": "icons/orbs.svg"
        }
      }
}