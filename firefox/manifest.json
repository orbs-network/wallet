{
    "manifest_version": 2,
    "name": "ORBS Wallet Beta",
    "version": "1.0",
    "description": "Implements a single Orbs account",
    "icons": {
        "48": "icons/orbs.svg"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "bundle.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": [
            "http://*/*",
            "https://*/*"
        ]
    }
}